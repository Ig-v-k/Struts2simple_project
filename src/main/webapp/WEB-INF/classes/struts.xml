<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.enable.SlashesInActionNames" value="false"/>
	
 	<package name="default" namespace="/" extends="struts-default">
 	
 	 	<!-- 
 	 	*** Interceptors *** 
 	 	-->
    	<interceptors>
        	<interceptor name="check_logInInterceptor" class="com.struts2.interceptors.CheckLogInUserInterceptor" />
        	<interceptor name="testInterceptor" class="com.struts2.interceptors.InterceptorTest" />
        	<interceptor name="validateInterceptor" class="com.struts2.interceptors.InterceptorSessionUser" />
        	
        	<interceptor-stack name="sessionUSER">
        		<interceptor-ref name="validateInterceptor" />
        		<interceptor-ref name="defaultStack" />
        	</interceptor-stack>
        	
        	<interceptor-stack name="test">
        		<interceptor-ref name="testInterceptor" />
        		<interceptor-ref name="defaultStack" />
        	</interceptor-stack>
        	
            <interceptor-stack name="check_stack">
<!-- 			
				<interceptor-ref name="exception"/>
			    <interceptor-ref name="alias"/>
			    <interceptor-ref name="params"/>
			    <interceptor-ref name="servletConfig"/>
			    <interceptor-ref name="prepare"/>
			    <interceptor-ref name="i18n"/>
			    <interceptor-ref name="chain"/>
			    <interceptor-ref name="modelDriven"/>
			    <interceptor-ref name="fileUpload"/>
			    <interceptor-ref name="staticParams"/>
			    <interceptor-ref name="params"/>
			    <interceptor-ref name="conversionError"/> 
-->
                <interceptor-ref name="check_logInInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
   		</interceptors>
   		
<!--    
		<default-interceptor-ref name="sessionUSER" />
   		
	  	<global-results>
   			<result name="none" type="redirectAction">hello</result>
   		</global-results>  
-->

 		<!-- <default-action-ref name="UnderConstruction"/> -->
 		
 		<!--
		*** Actions ***
 		-->
		<action name="hello" class="com.struts2.action.HelloAction">
   			<result name="success">/WEB-INF/helloPageMain.jsp</result>
   		</action>
   		<action name="login_GET" class="com.struts2.action.LoginControllerToDoAction" method="get">
   			<interceptor-ref name="check_stack" />
   			<result name="input">/WEB-INF/login.jsp</result>
   		</action>
   		<action name="login_POST" class="com.struts2.action.LoginControllerToDoAction" method="post">
			<interceptor-ref name="sessionUSER"></interceptor-ref>
			<result name="none" type="redirectAction">hello</result>   		
   			<result name="success" type="redirectAction">hello</result>
			<result name="error">/WEB-INF/login.jsp</result>
   		</action>
   		<action name="register_GET" class="com.struts2.action.RegistrationControllerAction" method="GET_register">
			<interceptor-ref name="sessionUSER"></interceptor-ref>
			<result name="none" type="redirectAction">hello</result>
   			<result name="input">/WEB-INF/registrationForm.jsp</result>
   		</action>
   		<action name="register_POST" class="com.struts2.action.RegistrationControllerAction" method="POST_register">
			<interceptor-ref name="sessionUSER"></interceptor-ref>
			<result name="none" type="redirectAction">hello</result>   		
   			<result name="success" type="redirectAction">hello</result>
			<result name="error">/WEB-INF/registrationForm.jsp</result>
   		</action>
   		<action name="" class="com.struts2.action.FirstMain" method="boot">
			<interceptor-ref name="sessionUSER"></interceptor-ref>
			<result name="none" type="redirectAction">hello</result>   		
   			<interceptor-ref name="test" />
   			<result name="success" type="redirectAction">hello</result>
   		</action>
   		<action name="logout" class="com.struts2.action.LogoutControllerAction" method="USER_logout">
			<interceptor-ref name="sessionUSER"></interceptor-ref>
			<result name="none" type="redirectAction">hello</result>   		
   			<result name="success" type="redirectAction">hello</result>
   		</action>
		<action name="profile" class="com.struts2.action.ProfileControllerAction" method="GET_profile">
			<interceptor-ref name="sessionUSER"></interceptor-ref>
			<result name="none" type="redirectAction">hello</result>
   			<result name="success" >/WEB-INF/profileUSER.jsp</result>
   		</action>
   		
   	</package>

</struts>