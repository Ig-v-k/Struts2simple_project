<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.enable.SlashesInActionNames" value="false"/>
	
 	<package name="qwe" namespace="/" extends="struts-default">
 	
 	 	<!-- 
 	 	*** Interceptors *** 
 	 	-->
    	<interceptors>
        	<interceptor name="check_logInInterceptor" class="com.struts2.interceptors.CheckLogInUserInterceptor" />
            <interceptor-stack name="check_stack">
                <interceptor-ref name="check_logInInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
   		</interceptors>
 		
 		<!-- 
		*** Actions ***
 		-->
   		<action name="login_GET" class="com.struts2.action.LoginControllerToDoAction" method="GET_login">
			<interceptor-ref name="params" />
   			<interceptor-ref name="check_stack" />
   			<result name="input">/WEB-INF/login.jsp</result>
   		</action>
   		<action name="login_POST" class="com.struts2.action.LoginControllerToDoAction" method="POST_login">
   			<result name="success" type="redirectAction">userInfo</result>
			<result name="none, error">/WEB-INF/login.jsp</result>
   		</action>
   		<action name="register_GET" class="com.struts2.action.RegistrationAction" method="GET_register">
   			<result name="input">/WEB-INF/registrationForm.jsp</result>
   		</action>
   		<action name="register_POST" class="com.struts2.action.RegistrationAction" method="POST_register">
   			<result name="success" type="redirectAction">userInfo</result>
			<result name="error">/WEB-INF/registrationForm.jsp</result>
   		</action>
   		<action name="" class="com.struts2.action.FirstBootAction" method="boot">
   			<result name="success" type="redirectAction">hello</result>
   		</action>
   		<action name="logout" class="com.struts2.action.FirstBootAction" method="userLogout">
   			<result name="success" type="redirectAction">hello</result>
   		</action>
   		
   		
   	</package>

</struts>